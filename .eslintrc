{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base",
    "plugin:jest/recommended",
    "plugin:jsdoc/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "semi": [2, "never"],
    "max-len": ["error", { "code": 100 }],
    "arrow-parens": [2, "as-needed"]
  },
  "plugins": ["jest", "jsdoc"]
}
